@model IEnumerable<Movie_website.Models.MSComments>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>

    <p>
        @Html.ActionLink("Create New Comment", "Create", "MSComments", new { MovieStarId = Request.Params["MovieStarId"].ToString() }, null)

    </p>
    <table class="table table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieStar.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MovieStar.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MSCommentsId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MSCommentsId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MSCommentsId })
                </td>
            </tr>
        }

    </table>

    @Html.ActionLink("Back to Films", "Index", "MovieStars")
</body>
</html>
